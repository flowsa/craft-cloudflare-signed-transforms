{
    "name": "richardfrankza/craft-cloudflare-signed-transforms",
    "description": "Transform images and PDFs via Cloudflare Workers with HMAC-signed URLs",
    "type": "craft-plugin",
    "license": "mit",
    "keywords": ["craft", "cms", "craftcms", "cloudflare", "image", "transform", "pdf", "thumbnail", "signed-url", "hmac", "security"],
    "support": {
        "email": "richard@flow.co.za",
        "issues": "https://github.com/richardfrankza/craft-cloudflare-signed-transforms/issues?state=open",
        "source": "https://github.com/richardfrankza/craft-cloudflare-signed-transforms",
        "docs": "https://github.com/richardfrankza/craft-cloudflare-signed-transforms",
        "rss": "https://github.com/richardfrankza/craft-cloudflare-signed-transforms/releases.atom"
    },
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.7.0|^5.0.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "richardfrankza\\cfst\\": "src/"
        }
    },
    "extra": {
        "handle": "cloudflare-signed-transforms",
        "name": "Cloudflare Signed Transforms",
        "developer": "Richard Frank",
        "documentationUrl": "https://github.com/richardfrankza/craft-cloudflare-signed-transforms",
        "class": "richardfrankza\\cfst\\CloudflareSignedTransforms"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}

